set $mod Mod4
set $term gnome-terminal
set $browser google-chrome-stable
set $menu tofi-drun --drun-launch=true
set $run tofi-run | xargs swaymsg exec --


output * bg /usr/share/backgrounds/gnome/libadwaita-d.jpg fill

# autostart
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id autotiling


bindsym --to-code Shift+Control+down exec brightnessctl set 10%-
bindsym --to-code Shift+Control+up exec brightnessctl set +10%
bindsym --to-code XF86AudioLowerVolume exec pamixer -d 5
bindsym --to-code XF86AudioRaiseVolume exec pamixer -i 5 --allow-boost
bindsym --to-code XF86AudioMute exec pamixer -t
bindsym --to-code XF86AudioMicMute exec pamixer --default-source -t

bindsym --to-code XF86AudioPlay exec playerctl play-pause
bindsym --to-code XF86AudioStop exec playerctl stop
bindsym --to-code XF86AudioPrev exec playerctl previous
bindsym --to-code XF86AudioNext exec playerctl next

bindsym --to-code $mod+Shift+s exec grimshot save area
bindsym --to-code $mod+s exec grimshot save active 


bindsym --to-code Mod1+q kill

bindsym --to-code Mod1+space exec $menu
bindsym --to-code $mod+space exec $run

floating_modifier $mod normal

bindsym --to-code $mod+Shift+r reload

bindsym --to-code $mod+Shift+q exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'


bindsym --to-code $mod+Left focus left
bindsym --to-code $mod+Down focus down
bindsym --to-code $mod+Up focus up
bindsym --to-code $mod+Right focus right

bindsym --to-code $mod+Shift+Left move left
bindsym --to-code $mod+Shift+Down move down
bindsym --to-code $mod+Shift+Up move up
bindsym --to-code $mod+Shift+Right move right

bindsym --to-code Mod1+1 workspace number 1
bindsym --to-code Mod1+2 workspace number 2
bindsym --to-code Mod1+3 workspace number 3
bindsym --to-code Mod1+4 workspace number 4
bindsym --to-code Mod1+5 workspace number 5
bindsym --to-code Mod1+6 workspace number 6
bindsym --to-code Mod1+7 workspace number 7
bindsym --to-code Mod1+8 workspace number 8
bindsym --to-code Mod1+9 workspace number 9
bindsym --to-code Mod1+0 workspace number 10

bindsym --to-code Mod1+Shift+1 move container to workspace number 1
bindsym --to-code Mod1+Shift+2 move container to workspace number 2
bindsym --to-code Mod1+Shift+3 move container to workspace number 3
bindsym --to-code Mod1+Shift+4 move container to workspace number 4
bindsym --to-code Mod1+Shift+5 move container to workspace number 5
bindsym --to-code Mod1+Shift+6 move container to workspace number 6
bindsym --to-code Mod1+Shift+7 move container to workspace number 7
bindsym --to-code Mod1+Shift+8 move container to workspace number 8
bindsym --to-code Mod1+Shift+9 move container to workspace number 9
bindsym --to-code Mod1+Shift+0 move container to workspace number 10


#bindsym --to-code $mod+s layout stacking
#bindsym --to-code $mod+w layout tabbed
#bindsym --to-code $mod+e layout toggle split

bindsym --to-code $mod+f fullscreen

bindsym --to-code $mod+Shift+f floating toggle

bindsym --to-code Mod1+b exec $browser
bindsym --to-code Mod1+e exec nautilus
bindsym --to-code Mod1+Return exec $term
bindsym --to-code Mod1+x exec $term

mode "resize" {
bindsym --to-code Left resize shrink width 10px
bindsym --to-code Down resize grow height 10px
bindsym --to-code Up resize shrink height 10px
bindsym --to-code Right resize grow width 10px

bindsym --to-code Return mode "default"
bindsym --to-code Escape mode "default"
}
bindsym --to-code $mod+r mode "resize"


bar {
swaybar_command waybar 
}

input "type:keyboard" {
    xkb_layout us,ru,ua
    # xkb_variant ,nodeadkeys
    xkb_options grp:caps_toggle
}
input * accel_profile flat

default_border none
default_border pixel 1


include /etc/sway/config.d/*
